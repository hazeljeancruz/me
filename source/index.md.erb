<% blog.articles.each do |article| %>
<% next if article.tags.include?("books") %>
<span class="date"><%= article.date.strftime('%b %e, %Y') %></span><br>
<%= link_to article.data.title, article, :class => 'abig' %><br>
<% if article.data.abstract? %>
<%= article.data.abstract %>
<% end %>
<br>
<br>
<% end %>
